<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/containerButtonFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_around"
        android:layout_marginTop="@dimen/margin_between"
        android:layout_marginEnd="@dimen/margin_around"
        android:layout_marginBottom="@dimen/margin_between"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Milk"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_text"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/noteNumberTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/noteNumberTV_Hint"
                    android:textColor="@color/Blue"
                    android:textColorHint="@color/Grey"
                    android:textSize="@dimen/textSizeNumberNote"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/noteTextTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/noteTextTV_Hint"
                    android:textColor="@color/Blue"
                    android:textColorHint="@color/Grey"
                    android:textSize="@dimen/textSizeNote"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/timeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/match_parent_Hint"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Grey"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSizeTime"></TextView>

                <CheckBox
                    android:id="@+id/noteCompletedCB"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></CheckBox>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>